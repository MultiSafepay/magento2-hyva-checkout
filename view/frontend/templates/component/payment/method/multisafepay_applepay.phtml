<script>
    function hideApplePayIfNotAllowed()
    {
        if (window.ApplePaySession && window.ApplePaySession.canMakePayments()) {
            return;
        }

        if (document.getElementById('payment-method-option-multisafepay_applepay')) {
            document.getElementById('payment-method-option-multisafepay_applepay').style.display = 'none';
        }
    }

    hideApplePayIfNotAllowed();

    window.addEventListener('checkout:step:loaded', event => {
        hideApplePayIfNotAllowed();
    });
</script>
